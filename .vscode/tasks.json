{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build EXE",
			"type": "shell",
			"command": "auto-py-to-exe.exe",
			"args": [
				"-c", "${workspaceFolder}/.vscode/auto-build.json",
				"-o", "${workspaceFolder}/dist"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "GetText Extract",
			"type": "shell",
			"command": "python",
			"args": [
				"C:\\Python39\\Tools\\i18n\\pygettext.py",
				"-d", "fs19modcheck",
				"-o", "${workspaceFolder}/locale/fs19modcheck.pot",
				"FS19_Mod_Checker.py"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group":"build"
		}
	]
}