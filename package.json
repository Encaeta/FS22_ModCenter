{
  "name": "fsg-mod-assistant",
  "version": "1.0.0",
  "description": "FSG Farm Sim Mod Assistant",
  "main": "modAssist_main.js",
  "homepage": "https://github.com/FSGModding/FSG_Mod_Assistant#readme",
  "keywords": [],
  "author": {
    "name": "J.T.Sage",
    "email": "jtsage+datebox@gmail.com",
    "url": "http://jtsage.dev"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FSGModding/FSG_Mod_Assistant/issues/"
  },
  "repository": "github:FSGModding/FSG_Mod_Assistant",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "node ./test/mod-reader-test.js"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/eslint-parser": "^7.19.1",
    "ansi-colors": "^4.1.3",
    "diff": "^5.1.0",
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.24.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "decode-dxt": "^1.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.2.1",
    "glob": "^8.0.3",
    "node-stream-zip": "^1.15.0",
    "parse-dds": "^1.2.1",
    "pngjs": "^6.0.0",
    "trash": "^8.1.0",
    "xml2js": "^0.4.23",
    "yargs": "^17.5.1"
  },
  "build": {
    "appId": "jtsage.fsmodchecker",
    "productName": "FSModChecker",
    "files": [
      "!/test/*",
      "!/screen_shots/*",
      "!**/.vscode/*",
      "!/dist/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName} Portable ${version}.exe"
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
